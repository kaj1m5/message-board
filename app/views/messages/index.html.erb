<div class="panel panel-default">
  
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message) do |f| %>

  <form role="form">
    <div class="form-group">
      <label for="message_name" class="col-sm-2 bg-info">名前:</label>
      <div class="col-sm-10">
        <%= f.text_field :name, :placeholder => "名前を入力", :class => "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <label for="message_body" class="col-sm-2 bg-info">内容:</label>
      <div class="col-sm-10">
        <%= f.text_area :body, :rows => 3, :placeholder => "内容を入力", :class => "form-control" %>
      </div>
    </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>
  </form>

<% end %>    
